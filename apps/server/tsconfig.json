{
    "include": ["src/**/*", "./environment.d.ts"],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "moduleDetection": "force",
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "baseUrl": ".",
    "paths": {
        "@centsibly/*": ["packages/*"]
    }
}
