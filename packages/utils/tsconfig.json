{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": false,
        "incremental": true,
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "nodenext",
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "declarationMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules/**", "dist/**"]
}
